{% layout "layout.liquid" %}
{% block content %}

  <div class="container-sm">
    <form action="/lists/{{list.id}}?_method=PUT" method="POST">
      <fieldset>
        <legend>Edit {{list.name}}</legend>
        <label class="form-label">Title:</label>
        <input class="form-control mb-4" type="text" name="name" value="{{list.name}}" required>
        <label class="form-label">Description:</label>
        <textarea class="form-control mb-4" rows="5" cols="50" name="description" placeholder="{{list.description}}"></textarea>
        <input class="btn btn-success" type="submit" value="Edit List">
        <a class="btn btn-danger" href="/lists/{{list.id}}">Cancel</a>
    </form>
  </div>

{% endblock %}