{% layout "layout.liquid" %}
{% block content %}

  <div class="container-sm" style="max-width: 700px; width: 70vw">
    <form action="/lists/{{list.id}}?_method=PUT" method="POST">
      <fieldset>
        <legend class="mb-4">Edit {{list.name}}</legend>
        <label class="form-label">Title:</label>
        <input class="form-control-plaintext mb-4" type="text" name="name" value="{{list.name}}" required>
        <label class="form-label">Description:</label>
        <textarea class="form-control-plaintext mb-4" rows="5" cols="50" name="description" placeholder="{{list.description}}"></textarea>
        <input class="btn btn-warning" type="submit" value="Update List">
        <a class="btn btn-danger" href="/lists/{{list.id}}">Cancel</a>
      </fieldset>
    </form>
  </div>

{% endblock %}