{% layout "layout.liquid" %}
{% block content %}

    <div style="text-align: center">
       <h1>{{list.name}}</h1>
       {% if list.seconds != "" %}
            <h4>Length: {{list.minutes}}{{- ":" -}}
            {% if list.seconds < 10 %}
                {{- "0" -}}{{- list.seconds -}}
            {% else %}
                {{- list.seconds -}}
            {% endif %}
            </h4>
       {% endif %}
       <hr>
       <h5>{{list.description}}</h5>
       <hr>
       <ol>
            {% if list.listContents.length > 0 %}
                    {% for song in list.listContents %}
                        <li>
                            <div class="card mb-4">
                                <h5>{{song.name}}</h5>
                            {%- comment -%} Display length in format 0:00 {%- endcomment -%}
                                <h6>Length: {{song.minutes}}{{- ":" -}}
                                    {% if song.seconds < 10 %}
                                        {{- "0" -}}{{- song.seconds -}}
                                    {% else %}
                                        {{- song.seconds -}}
                                    {% endif %}
                                </h6>
                                {% if song.soloist != "" %}
                                    <h6>Featuring {{song.soloist}}</h6>
                                {% endif %}
                            </div>
                        </li>
                    {% endfor %}
            {% else %}
                    <h4>No songs in this list yet.</h4>
            {% endif %}
       </ol>
       <hr>
       {% if list.owner == session.groupId %}
            <a class="btn btn-success" href="/lists/songs/{{list.id}}">Add/Remove Songs</a>
            <hr>
            <h4>Notes</h4>
            <hr>
            <div class="col-md-6">
                <form action="/notes/{{list.id}}" method="POST">
                <fieldset>
                    <legend>Write Note:</legend>
                    <label class="form-label">note:</label>
                    <input class="form-control-plaintext mb-3" type="text" placeholder="note about this set list..." name="message" required>
                    <input class="btn btn-success" type="submit" value="Add Note">
                </fieldset>
                </form>
            </div>
            <hr>
            {% if list.notes.length > 0 %}
                <div class="container-sm justify-content-center">
                    <div class="col-md-8 col-lg-6">
                    {% for note in list.notes %}
                        {% render "note.liquid", note: note, session: session, songOrList: list %}
                    {% endfor %}
                    </div>
                </div>
            {% else %}
                <small>No notes yet...</small>
            {% endif %}
            <hr>
            <div class="btn-group-lg">        
                <a class="btn btn-primary" href="/lists/edit/{{list.id}}">Edit List</a>
                <a class="btn btn-danger" href="/lists/delete/{{list.id}}">Delete List</a>
            </div>
       {% endif %}
    </div>

{% endblock %}