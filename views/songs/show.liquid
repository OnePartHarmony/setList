{% layout "layout.liquid" %}
{% block content %}
    <h1>{{song.name}}</h1>
    <h4>{{song.description}}</h4>
    {%- comment -%} Display key with symbols for sharp or flat {%- endcomment -%}
    <h5>Key: {{song.key}}
        {% if song.sharp %}
        {{- "&#x266F" -}}
        {% endif %}
        {% if song.flat %}
        {{- "&#x266D" -}}
        {% endif %}
        {% if song.minor %}
        {{- "m" -}}
        {% endif %}
    </h5>
    {%- comment -%} Display length in format 0:00 {%- endcomment -%}
    <h5>Length: {{song.minutes}}{{- ":" -}}
        {% if song.seconds < 10 %}
            {{- "0" -}}{{- song.seconds -}}
        {% else %}
            {{- song.seconds -}}
        {% endif %}
    </h5>
    {% if song.soloist != "" %}
        <h5>Featuring {{song.soloist}}</h5>
    {% endif %}
    {% if session.groupId == song.owner %}
        <div class="btn-group">
            <a class="btn btn-primary" href="/songs/edit/{{song.id}}">Edit Song</a>
            <a class="btn btn-danger" href="/songs/delete/{{song.id}}">Delete Song</a>
        </div>
    {% endif %}

{% endblock %}