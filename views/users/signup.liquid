{% layout "layout.liquid" %}
{% block content %}

  <div class="container-sm" style="max-width: 500px; width: 80vw; font-size: 1.2em">
    <form action="/user/signup" method="POST">
      <fieldset>
        <legend style="font-size: 1.5em">Sign Up New User</legend>
        <label class="form-label">Username:</label>
        <input class="form-control-plaintext mb-4" type="text" name="username" placeholder="username" required>
        <label class="form-label">Email Address:</label>
        <input class="form-control-plaintext mb-4" type="email" name="emailAddress" placeholder="user@example.com" required>
        <label class="form-label">Profile Photo Link:</label>
        <input class="form-control-plaintext mb-4" type="url" name="img" placeholder="https://i.imgur.com/mySelf.jpg">
        <label class="form-label">Password:</label>
        <input class="form-control-plaintext mb-4" type="password" name="password" placeholder="password" required>
        <input class="btn btn-success" type="submit" value="Create Account">
      </fieldset>      
    </form>
  </div>

{% endblock %}