{% layout "layout.liquid" %}
{% block content %}

  <div class="container-sm" style="max-width: 500px; width: 80vw">
    <form method="POST" action="/user/{{user.id}}?_method=PUT">
      <fieldset>
        <legend>Edit Profile</legend>
        <label class="form-label mt-3">Username:</label>
        <input class="form-control-plaintext mb-4" type="text" name="username" value="{{user.username}}" required>
        <label class="form-label">Email Address:</label>
        <input class="form-control-plaintext mb-4" type="email" name="emailAddress" value="{{user.emailAddress}}" required>
        <label class="form-label">Profile Photo Link:</label>
        <input class="form-control-plaintext mb-5" type="url" name="img" value="{{user.img}}" placeholder="https://i.imgur.com/mySelf.jpg">
        <input class="btn btn-warning" type="submit" value="Update Account">
        <a class="btn btn-danger" href="/groups">Cancel</a>
      </fieldset>
      
    </form>
  </div>

{% endblock %}