{% layout "layout.liquid" %}
{% block content %}
    <h1>Your Groups:</h1>
    <div class="row">
        {% for group in groups %}
          <div class="card" style="width: 18rem">
            <h5 class="card-header">{{ group.name }}
            </h5>
            <div class="card-body">
                {% if group.img %}
                    <img class="group-card-img" alt="{{group.name}} profile photo" src="{{group.img}}">
                {% endif %}   
                <a class="btn btn-outline-info" href="/groups/{{group.id}}">
                View
                {{group.name}}
              </a>
            </div>
          </div>
        {% endfor %}
    </div>
{% endblock %}